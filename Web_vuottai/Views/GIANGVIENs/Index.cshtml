@model IEnumerable<Web_vuottai.Models.GIANGVIEN>

@{
    ViewData["Title"] = "Index";
}

<h1>THÔNG TIN GIẢNG VIÊN</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Họ tên giảng viên </th>
            <th>
                @* @Html.DisplayNameFor(model => model.ChucVu) *@
                Chức vụ
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.DonVi) *@
                Đơn vị
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>               
                @Html.DisplayFor(modelItem => item.ChucVu.TenChucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonVi.TenDonVi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GiangVienId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GiangVienId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GiangVienId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
