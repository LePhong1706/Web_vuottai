@model IEnumerable<Web_vuottai.Models.LOP>

@{
    ViewData["Title"] = "Quản lý Lớp";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
        </p>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Mã Lớp</th>
                    <th>Tên Lớp</th>
                    <th>Quân Số</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaLop)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenLop)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuanSo)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.LopId" class="btn btn-sm btn-outline-primary">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.LopId" class="btn btn-sm btn-outline-info">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.LopId" class="btn btn-sm btn-outline-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
